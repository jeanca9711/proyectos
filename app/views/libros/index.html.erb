<p id="notice"><%= notice %></p>

<h1>Libros</h1>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Titulo</th>
      <th>Autor</th>
      <th>Anyo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @libros.each do |libro| %>
      <tr>
        <td><%= libro.titulo %></td>
        <td><%= libro.autor %></td>
        <td><%= libro.anyo %></td>
        <td><%= link_to 'Ver', libro, :class => "btn btn-info text-white" %></td>
        <td><%= link_to 'Editar', edit_libro_path(libro), :class => "btn btn-warning text-white" %></td>
        <td><%= link_to 'Eliminar', libro, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger text-white" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Libro', new_libro_path, :class => "btn btn-success text-white" %>
