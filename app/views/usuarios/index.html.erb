<p id="notice"><%= notice %></p>

<h1>Usuarios</h1>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Nombres</th>
      <th>Apellidos</th>
      <th>Direccion</th>
      <th>Telefono</th>
      <th>Login</th>
      <th>Password</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.nombres %></td>
        <td><%= usuario.apellidos %></td>
        <td><%= usuario.direccion %></td>
        <td><%= usuario.telefono %></td>
        <td><%= usuario.login %></td>
        <td><%= usuario.password %></td>
        <td><%= usuario.email %></td>
        <td><%= link_to 'Ver', usuario, :class => "btn btn-info text-white" %></td>
        <td><%= link_to 'Editar', edit_usuario_path(usuario), :class => "btn btn-warning text-white" %></td>
        <td><%= link_to 'Eliminar', usuario, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger text-white" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Usuario', new_usuario_path, :class => "btn btn-success text-white" %>
